<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.demo.mapper.BoardMapper">

    <sql id="search">
        <where>
            <if test="searchKey != null and searchKey != ''">
                btitle like concat('%', #{searchKey}, '%')
            </if>
        </where>
    </sql>

    <select
        id="boardCount"
        resultType="int"
    >
        SELECT
        COUNT(*)
        FROM tb_board
    </select>


    <select 
        id="getList" 
        resultType="BoardVO"
    >
		select *
        FROM tb_board
        <include refid="search"/>
		order by bno desc limit #{skip}, #{size}
    </select>

   <insert id="filesaver">
    insert into tb_customfile (
        bno,
        uploadPath,
        filename
    ) values(
        #{bno},
        #{uploadPath},
        #{filename}
    );
   </insert> 

    <insert id="insert">
        insert into tb_board (
            btitle,
            bcontent,
            member_id
        ) values (
            #{btitle},
            #{bcontent},
            #{member_id}
        )
    </insert>

    <select id="getBoardNumber" resultType="BoardVO">
        select *
        from tb_board
        where btitle = #{value}
    </select>
</mapper>